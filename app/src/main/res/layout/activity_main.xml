<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounter.MainActivity"
    android:background="#E3F2FD"
    android:weightSum="1">
 <LinearLayout
     android:layout_width="match_parent"
     android:weightSum="1"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     
     >

     <LinearLayout
       android:layout_width="0dip"
         android:layout_weight="0.5"
       android:layout_height="wrap_content"
       android:orientation="vertical">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A Team "
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textAllCaps="true"
            android:textColor="#388E3C"
            android:textStyle="bold"
     />
 <TextView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="0"
     android:gravity="center_horizontal"
     android:padding="4dp"
     android:id="@+id/score_team_A"
     android:textColor="#000000"/>
 <Button android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="+3 Points"
     android:layout_margin="8dp"
     android:onClick="threePointer"
     android:background="#76FF03"/>
 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="+2 Points"
     android:layout_margin="8dp"
     android:onClick="twoPointer"
     android:background="#B2FF59"/>
 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="8dp"
     android:text="Free Throw"
     android:onClick="freeThrow"
     android:background="#CCFF90"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B Team"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textAllCaps="true"
            android:textColor="#FB8C00"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_horizontal"
            android:id="@+id/score_team_B"
            android:padding="4dp"
            android:textColor="#000000"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3 Points"
            android:layout_margin="8dp"
            android:onClick="threePointerB"
            android:background="#FFc400"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 Points"
            android:layout_margin="8dp"
            android:onClick="twoPointerB"
            android:background="#FFD740"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Throw"
            android:layout_margin="8dp"
            android:onClick="freeThrowB"
            android:background="#FFE57F"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.25"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Full Time"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:background="#FF8A80"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.25"
        android:gravity="center_horizontal"
        android:layout_height="0dip">


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Reset"
        android:layout_margin="4dp"
        android:textSize="21dp"
        android:background="#F44336"
        android:onClick="Reset"/>
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src=""/>
    </LinearLayout>


</LinearLayout>


